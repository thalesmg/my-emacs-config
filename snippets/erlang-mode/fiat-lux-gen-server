# -*- mode: snippet; -*-
# name: erlang-fiat-lux-gen-server
# key: <fiatlux-gen_server
# --

-module(a).

-behaviour(gen_server).

%% API
-export([
    start_link/1
]).

%% \`gen_server' API
-export([
    init/1,
    terminate/2,
    handle_call/3,
    handle_cast/2,
    handle_info/2
]).

%%------------------------------------------------------------------------------
%% Type declarations
%%------------------------------------------------------------------------------

%%------------------------------------------------------------------------------
%% API
%%------------------------------------------------------------------------------

start_link(Opts) ->
    gen_server:start_link(?MODULE, Opts, []).

%%------------------------------------------------------------------------------
%% \`gen_server' API
%%------------------------------------------------------------------------------

init(_Opts) ->
    State = #{},
    {ok, State}.

terminate(_Reason, _State) ->
    ok.

handle_call(Call, _From, State) ->
    {reply, {error, {unknown_call, Call}}, State}.

handle_cast(_Cast, State) ->
    {noreply, State}.

handle_info(_Info, State) ->
    {noreply, State}.

%%------------------------------------------------------------------------------
%% Internal fns
%%------------------------------------------------------------------------------
